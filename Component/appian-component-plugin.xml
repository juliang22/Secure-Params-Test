<appian-component-plugin name="Background Color" key="com.mycorp.background.color">
  <plugin-info>
    <description>Provides a Background Color component to demo multi-select dropdowns.   "a!textField(
    label: "Text",
  )</description>
    <vendor name="Appian" url="http://www.appian.com" />
    <support supported="true" email="support@appian.com" url="https://community.appian.com"/>
