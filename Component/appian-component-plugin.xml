    </parameter>
    <parameter>
      <name>textVisible</name>
      <category>input-only</category>
      <type>Text</type>
      <secured>visible</secured>
    </parameter>
    <parameter>
      <name>textArrVisible</name>
      <category>input-only</category>
      <type>Text?list</type>
      <secured>visible</secured>
    </parameter>
    <parameter>
